@model IEnumerable<JobPortal.Web.Models.JobCategory>

@{
    ViewData["Title"] = "Index";
}

<h1>List of all job categories</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.JobCategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.JobCategoryName)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.JobCategoryId" class="btn btn-dark">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.JobCategoryId" class="btn btn-dark">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.JobCategoryId" class="btn btn-dark">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
