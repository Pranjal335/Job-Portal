<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JobPortal.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/team.css" />
  
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    @RenderSection("HeadScripts", required: false)
</head>
<body style="background-image:url('/bg.jpg'); ">


    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index"><h2>Online Job <em>Portal</em></h2></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">
                                Home
                                <span class="sr-only">(current)</span>
                            </a>
                        </li>

                        <li class="nav-item"><a class="nav-link" asp-area="JobView" asp-controller="Home" asp-action="Index">Jobs</a></li>

                        <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/Privacy">About us</a></li>


                        <li class="nav-item dropdown active">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Admin</a>

                            <div class="dropdown-menu">
                                <a class="dropdown-item active" asp-area="Portal" asp-controller="JobCategories" asp-action="Create">Add Job Category</a>
                                <a class="dropdown-item active" asp-area="Portal" asp-controller="JobDetails" asp-action="Create">Add Job Details</a>
                                <a class="dropdown-item active" asp-area="Portal" asp-controller="CandidateDetails" asp-action="Index">Candidate Details</a>

                            </div>
                        </li>


                    </ul>
                </div>
            </div>
            <partial name="_LoginPartial" />
        </nav>
    </header>
    <br />
    <br />
    <br />
    <br />


    <div >
        <main role="main" class="pb-3 container">
            @RenderBody()
        </main>
    </div>

     

  



    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>


</html>